---
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<section
  id={id}
  class="flex flex-row flex-wrap items-stretch max-w-4xl gap-16 mx-auto my-32 md:flex-nowrap"
>
  <div class="flex flex-col md:basis-1/2">
    <slot name="left-col" />
  </div>
  <div class="flex flex-col md:basis-1/2">
    <slot name="right-col" />
  </div>
</section>
